#!/usr/bin/env ruby

# sync output
$stdout.sync = true

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"

if pack = LanguagePack.detect(ARGV[0], ARGV[1])
  pack.log("compile") do
    pack.compile
  end
end


vendor_dir = ARGV[0] + '/vendor'

system('echo "-----> Downloading and setting up 3rd party programs"')

system('echo "       Downloading and setting up aws."')
system("cd #{vendor_dir} && curl https://s3.amazonaws.com/wevue-programs/aws.tar.gz -s -O")
system("tar zxpf #{vendor_dir}/aws.tar.gz -C #{vendor_dir}")
system("rm #{vendor_dir}/aws.tar.gz")

system('echo "       Downloading and setting up ffmpeg."')
system("cd #{vendor_dir} && curl https://s3.amazonaws.com/wevue-programs/ffmpeg.tar.gz -s -O")
system("tar zxpf #{vendor_dir}/ffmpeg.tar.gz -C #{vendor_dir}")
system("rm #{vendor_dir}/ffmpeg.tar.gz")

system('echo "       Downloading and setting up sox."')
system("cd #{vendor_dir} && curl https://s3.amazonaws.com/wevue-programs/sox.tar.gz -s -O")
system("tar zxpf #{vendor_dir}/sox.tar.gz -C #{vendor_dir}")
system("rm #{vendor_dir}/sox.tar.gz")

system('echo "       Downloading and setting up vim."')
system("cd #{vendor_dir} && curl https://s3.amazonaws.com/heroku-jvm-buildpack-vi/vim-7.3.tar.gz -s -O")
system("tar zxpf #{vendor_dir}/vim-7.3.tar.gz -C #{vendor_dir}")
system("rm #{vendor_dir}/vim-7.3.tar.gz")

system (
curl https://s3.amazonaws.com/heroku-jvm-buildpack-vi/vim-7.3.tar.gz --output vim.tar.gz
mkdir vim && tar xzvf vim.tar.gz -C vim
